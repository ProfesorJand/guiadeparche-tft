---
import Header from '../components/headers/Header.astro';
import Footer from '../components/footer/Footer.astro';
import Twitch from '../components/embed/Twitch.astro';
import Logo from '../components/logo/Logo.astro';
import Adsense from '../components/adsense/Adsense.astro';
import { ViewTransitions } from 'astro:transitions';
interface Props {
  title: string;
}
const { title, JSONSchema } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/src/assets/GP_logo.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="author" content="Jupeson, Profesorjand">
    <script async custom-element="amp-ad" src="https://cdn.ampproject.org/v0/amp-ad-0.1.js"></script>
    {JSONSchema && <script type="application/ld+json" set:html={JSONSchema}></script>}
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <Header transition:persist/>
    <slot />
    <Footer />
    <Twitch   transition:persist/>
    <Logo />
    <Adsense />
    <style is:global>
      :root {
        --bg-primary: #130359;
        --bg-secondary: #1e197f;
        --bg-tertiary: #120d69;
        --color-primary: #ffffff;
        --border-color: #ffd700;
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          rgb(var(--accent-light)) 30%,
          white 60%
        );
        font-family: 'Roboto', Sans-serif;
        
        color: var(--color-primary);
      }

      body::-webkit-scrollbar {
        width: 12px; /* width of the entire scrollbar */
      }

      body::-webkit-scrollbar-track {
        background: var(--bg-primary); /* color of the tracking area */
      }

      body::-webkit-scrollbar-thumb {
        background-color: blue; /* color of the scroll thumb */
        border-radius: 20px; /* roundness of the scroll thumb */
        border: 2px solid var(--border-color); /* creates padding around scroll thumb */
      }
      body {
        background-color: var(--bg-primary);
        overflow-y: scroll;
        margin: 0;
        width: 100%;
        display: flex;
        position: relative;
        flex-direction: column;
        min-width: fit-content;
      }
      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }
      .titulo {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
        font-size: 2rem;
        text-align: center;
      }
      .hide {
        display: none;
      }

      @media only screen and (max-width: 900px) {
        html {
          background-size: 50px 50px;
        }
        main{
          width: 100%;
        }
      }
    </style>
  </body>
</html>


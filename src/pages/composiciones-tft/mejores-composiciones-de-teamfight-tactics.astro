---
import Layout from '../../layouts/Layout.astro';
import ContainerMeta from '../../components/new-meta-comp/ContainerMeta.astro';
import Youtube from '../../components/youtube/Youtube.astro';
import Main from '@components/main/Main.astro';
const title = 'TFT - Meta Comp';
---

<Layout title={title}>
  <Main>
    <Youtube src={"https://youtube.com/playlist?list=PLxRnNvReiLMEriFDu0UxXScDabCIX-PWy&si=YW7NdSvPfu9dQhx9"} loading={"lazy"}></Youtube>
    <h1 class="titulo">Meta Comp</h1>
    <ContainerMeta />
  </Main>
</Layout>

<style>
  .titulo {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0;
  }
  .hide {
    display: none;
  }
</style>
---
import Layout from '../../layouts/Layout.astro';
import ContainerMeta from '../../components/meta-comp/ContainerMeta.astro';
import Spinner from '../../components/spinner/Spinner.astro';
const title = 'TFT - Meta Comp';
---

<Layout title={title}>
  <!-- <Spinner /> -->
  <main>
    <h1 class="titulo">Meta Comp</h1>
    <ContainerMeta />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 50%;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
    background-color: var(--bg-tertiary);
    box-sizing: border-box;
  }

  .titulo {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0;
  }
  .hide {
    display: none;
  }

  @media only screen and (max-width: 900px) {
    main {
      width: 100%;
    }
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    console.log('loader', document.querySelector('#loader'));
    document.querySelector('#loader')?.classList.remove('showLoader');
    document.querySelector('main').classList.remove('hide');
    console.log('termino de cargarse la pagina');
  });
</script>

---
import MejoresComposicionesDeTeamfightTactics from "./composiciones-tft/mejores-composiciones-de-teamfight-tactics.astro";
import LayoutMidOnly from "@layouts/LayoutMidOnly.astro";
import CardPaginas from "@components/cards/Paginas.astro";

const Paginas = [
  {
    titulo:"",
    descripcion:"",
    img:"/tft/assets/portada.webp",
    link:"/tft/meta-comps-tier-list-teamfight-tactics/"
  },
  {
    titulo:"",
    descripcion:"",
    img:"/lol/portada.webp",
    link:"/lol/best-champions-tier-list-league-of-legends/"
  },
  {
    titulo:"",
    descripcion:"",
    img:"/valorant/portada.webp",
    link:"/valorant/meta-agents-maps/"
  },
  {
    titulo:"",
    descripcion:"",
    img:"/wildrift/portada.webp",
    link:"/wildrift/best-champions-tier-list-wild-rift"
  }
]

import { crearJSONSchema } from "@json/schema/crearJSONSchema";
const title="Guiadeparche"
const description = "Guiadeparche is a comprehensive guide for the latest patches in Riot Games and others. Discover the best champions, agents, and compositions to dominate your games.";
const imgPost = "/lol/portada.webp"
const JSONSchema = crearJSONSchema({title, imgPost, description});
const keywords = "Valorant Meta, Agents Valorant, Maps Valorant, Tier List Valorant, Best Agents Valorant";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---
<LayoutMidOnly title='Guiadeparche' JSONSchema={JSONSchema} description={description} keywords={keywords} image={imgPost} canonical={canonicalURL}>
  <div class="container">
    {Paginas.map(({titulo, descripcion, img, link})=>{
      return (
          <CardPaginas titulo={titulo} descripcion={descripcion} img={img} link={link}/>
        )
      })}
  </div>
</LayoutMidOnly>

<style>
  .container{
    display: flex;
    width: 100%;
    flex-direction: row;
    flex-wrap: wrap;
  }
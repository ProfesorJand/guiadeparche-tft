---
import { Image } from 'astro:assets';
---

<Image
  class="logo"
  src="/GP_logo.png"
  alt="Logo Guiadeparche"
  loading="lazy"
  width="100"
  height="100"
/>

<style>
  .logo {
    position: fixed;
    right: 0;
    bottom: 0;
  }

  @media only screen and (max-width: 900px) {
    .logo {
      width: 100px;
      height: 100px;
    }
  }
</style>

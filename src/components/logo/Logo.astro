---
import { Image } from 'astro:assets';
import logo from '../../assets/GP_logo.png';
---

<Image
  class="logo"
  src={logo.src}
  alt="Logo Guiadeparche"
  loading="lazy"
  width={50}
  height={50}
  inferSize={false}
/>

<style>
  .logo {
    position: fixed;
    right: 0;
    bottom: 0;
  }

  @media only screen and (max-width: 900px) {
    .logo {
      width: 100px;
      height: 100px;
    }
  }
</style>

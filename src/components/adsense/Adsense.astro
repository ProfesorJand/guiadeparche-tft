<style define:vars={{right, left}}>
  .publicidad{
    display: flex;
    position: relative;
    width: 100%;
    top:5rem;
    right:var(--right);
    left:var(--left);
  }
  @media only screen and (min-width:900px){
    .publicidad{
      width:25%;
      position: absolute;
    }
  }
</style>
---
const {direction} = Astro.props;
let right;
let left;
if(direction === "left"){
  left = 0;
}else{
  right = 0;
}
---

<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6116944495372863"
     crossorigin="anonymous"></script>

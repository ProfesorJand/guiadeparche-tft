---
import { Image } from 'astro:assets';
import { getImage } from 'astro:assets';
const { championsTier, index } = Astro.props;
---

<div class="containerChampionTierList">
  {
    championsTier.map(async (champTier, i) => {
      const src = champTier.imgTitular;
      const format = 'png' || 'jpg';
      const width = 100;
      const height = 100;
      const optimizedBackground = await getImage({
        src,
        format,
        width,
        height,
      });
      return (
        <img
          src={optimizedBackground.src}
          alt={champTier.titulo}
          class={
            'imgChampionTierList' +
            (index === 0 && i === 0 ? ' imgSelected' : '')
          }
          width={optimizedBackground.options.width}
          height={optimizedBackground.options.height}
          loading="lazy"
        />
      );
    })
  }
</div>

<script is:inline>
  document.addEventListener('astro:page-load', () => {
    const imgChampionTierList = document.querySelectorAll(
      '.imgChampionTierList'
    );
    imgChampionTierList.forEach((img) => {
      img.addEventListener('click', () => {
        if (document.querySelectorAll('.imgSelected').length) {
          document
            .querySelectorAll('.imgSelected')[0]
            .classList.remove('imgSelected');
        }
        img.classList.add('imgSelected');
        const id = img.getAttribute('alt').replaceAll(' ', '-');
        document
          .querySelectorAll('.infoComp.show')[0]
          ?.classList.remove('show'); // (".infoComp .show").classlist.remove("show")
        document.getElementById(id).classList.add('show');
      });
    });
  });
</script>

<style>
  .containerChampionTierList {
    display: flex;
    position: relative;
    width: 100%;
    box-sizing: border-box;
    align-items: center;
  }

  .imgChampionTierList:hover {
    cursor: pointer;
    transform: scale(1);
  }

  .imgChampionTierList {
    /* padding: 0px; */
    width: 20%;
    height: auto;
    box-sizing: border-box;
    /* height: calc(100% / 6); */
    /* max-width: 95px; */
    /* max-height: 200px; */
    /* min-width: 55px; */
    /* min-height: 55px; */
    transition: 0.5s;
    transform: scale(0.9);
  }

  .imgSelected {
    filter: grayscale(0%);
    -webkit-filter: grayscale(0%);
    transform: scale(1);
    transition: 0.5s;
  }
</style>

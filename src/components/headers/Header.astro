---
import Menu from './Menu.astro';
const menus = [
  {
    nombre: 'Meta Comps',
    link: '/meta-comp',
  },
  {
    nombre: 'Builder',
    link: '/builder-tft',
  },
  {
    nombre: 'Campeones',
    link: '/campeones',
  },
  {
    nombre: 'Aumentos',
    link: '/aumentos',
  },
  {
    nombre: 'Guias',
    link: '/guias',
  },
];
---

<header>
  <nav>
    <div class="menuContainer">
      {
        menus.map((menu) => {
          return <Menu link={menu.link} nombre={menu.nombre} />;
        })
      }
    </div>
  </nav>
</header>

<style>
  .menuContainer {
    display: flex;
    flex-direction: row;
    position: relative;
    gap: 10px;
    align-items: center;
    justify-content: center;
  }
</style>
